<!DOCTYPE html>
<html>
<head>
  <title>Todo</title>
</head>
<body>
  <%- include("partials/header.ejs") %>

  <div class="min-h-screen flex items-center justify-center bg-gray-100 py-8 px-4">
    <div class="w-full max-w-md bg-white rounded-xl shadow-md p-8">
      <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Welcome, <%= user.name %>!</h1>
      <div class="space-y-6">
        <form action="/change-password" method="GET">
          <button 
            type="submit" 
            class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition">
            Change Password
          </button>
        </form>
        <form action="/request-data" method="GET">
          <button 
            type="submit" 
            class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition">
            Request Account Data
          </button>
        </form>
        <form action="/delete-account" method="POST">
          <button 
            id="delete_account"
            type="submit" 
            class="w-full bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700 transition">
            Delete Account
          </button>
        </form>
        <form action="/todo" method="GET">
          <button 
            id="todo_app"
            type="submit" 
            class="w-full bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 transition">
            Todo App
          </button>
        </form>
      </div>
      <div class="mt-6">
        <a href="/logout" 
           class="block text-center text-blue-600 hover:underline">
          Logout
        </a>
      </div>
      <div class="mt-6 text-center">
        <a href="/privacy" class="inline-block bg-gray-200 text-gray-800 px-4 py-2 rounded hover:bg-gray-300 transition">
          Privacy Policy
        </a>
      </div>
    </div>
  </div>

  <%- include("partials/footer.ejs"); %>
</body>
</html>
